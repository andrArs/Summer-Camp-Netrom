{% extends 'base.html.twig' %}

{% block title %}Hello FestivalArtistController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h2>LineUp </h2>
    <h3> {% for fa in lineUp %}
            <h5>{{ fa.festival.name }} - {{ fa.artist.name }}
                <h6> Day {{ fa.schedule.day }}, {{ fa.schedule.date|date('Y-m-d') }}</h6>
                <h6>{{ fa.schedule.getStartTime()|date('H:i') }} - {{ fa.schedule.getEndTime()|date('H:i') }}</h6>
                <h6>Stage: {{ fa.schedule.stage.name }}-> {{ fa.schedule.stage.description }}</h6>

            </h5>


        {% endfor %}</h3>


</div>
{% endblock %}
