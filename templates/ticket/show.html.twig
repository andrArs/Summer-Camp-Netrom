{% extends 'base.html.twig' %}

{% block title %}HelloController!{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #2e1a47;
            font-family: 'Poppins', sans-serif;
            text-align: center;
        }
        .example-wrapper {
            margin: 2em auto;
            max-width: 700px;
            background-color: rgb(236, 225, 253);
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 0 15px rgba(111, 66, 193, 0.3);
        }
        .btn-container {
            display: flex;
            justify-content: center;
            gap: 1rem;
            flex-wrap: wrap;
            margin-top: 1.5rem;
        }

        .btn-danger {
            background-color: #6f42c1;
            border-color: #6f42c1;
        }

        .btn-danger:hover {
            background-color: #5a35a2;
            border-color: #5a35a2;
        }

        .modal-content {
            border: 2px solid #6f42c1;
            border-radius: 12px;
        }

        .modal-header {
            background-color: #f3e6f5;
        }

        .image {
            width: 100%;
            height: 250px;
            border-radius: 15px;
            object-fit: cover;
            margin-bottom: 1.5rem;
            box-shadow: 0 4px 15px rgba(123, 47, 247, 0.6);
            border: 3px solid #a57eff;
        }
        .btn-back {
            display: inline-block;
            margin: 20px auto 0;
            color: #6f42c1;
            border: 1px solid #6f42c1;
            padding: 4px 16px;
            border-radius: 20px;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .btn-back:hover {
            background-color: #f3e6f5;
        }

        .btn-home {
            color: white;
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 600;
            text-decoration: none;
            background: linear-gradient(135deg, #f59e0b, #f97316);
            box-shadow: 0 4px 15px rgba(245, 158, 11, 0.4);
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            min-width: 150px;
            justify-content: center;
        }

        .btn-home:hover {
            background: linear-gradient(135deg, #f97316, #f59e0b);
            box-shadow: 0 6px 25px rgba(245, 158, 11, 0.6);
            transform: translateY(-3px);
        }


    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <div class="example-wrapper">

        <div style="color: #2e1a47; text-align: center; font-family: 'Poppins', sans-serif; margin: 2rem 0;">
            <h2>Details about <strong>{{ ticket.type }}</strong>!</h2>

            <h3>
                <i class="bi bi-currency-exchange" style="color: #6f42c1;" ></i>
                Price: <strong>{{ ticket.price }} lei</strong>
            </h3>

            <p style="max-width: 600px; margin: 1rem auto; line-height: 1.4;">
                {{ ticket.description }}
            </p>
        </div>

        <img
            src="https://img.freepik.com/free-psd/music-festival-celebration-template_23-2151507793.jpg?semt=ais_hybrid&w=740"
            alt="Festival Image"
            class="image">

        {% if is_granted('ROLE_USER') and not is_granted('ROLE_ADMIN')  %}
            <div >
                <a href="{{ path('buy_ticket_by_id',{'id': ticket.id}) }}" class="btn-home">
                    <i class="fas fa-ticket-alt"></i> Buy Tickets
                </a></div>
        {% endif %}

        {% if not is_granted('IS_AUTHENTICATED_REMEMBERED')  %}
            <div >
                <a href="{{ path('app_login') }}" class="btn-home">
                    <i class="fas fa-ticket-alt"></i> Buy Tickets
                </a></div>
        {% endif %}

        <a href="{{ path('all_tickets') }}" class="btn-back">Back to list</a>

        {% if is_granted('ROLE_ADMIN') %}

        <div style="margin-top: 1.2rem;">
        <a href="{{ path('edit_ticket', {'id': ticket.id}) }}" class="btn btn-danger" >
            Edit Ticket
        </a>
            </div>

        {#            button trigger modal#}
        <div class="btn-container">
            <button type="button"
                    class="btn btn-danger"
                    data-bs-toggle="modal"
                    data-bs-target="#deleteModal{{ ticket.id }}">
                Delete
            </button>
            {% endif %}

        </div>

        {#            modal#}
        <div class="modal fade"
             id="deleteModal{{ ticket.id }}"
             tabindex="-1"
             aria-labelledby="deleteModalLabel{{ ticket.id }}"
             aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">

                    <form action="{{ path('delete_ticket', {'id': ticket.id}) }}" method="post">

                        <div class="modal-header">
                            <h5 class="modal-title"
                                id="deleteModalLabel{{ ticket.id }}">Are you sure you want to delete the this ticket?</h5>

                            <button type="button"
                                    class="btn-close"
                                    data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>




    </div>
{% endblock %}
