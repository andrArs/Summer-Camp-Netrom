{% extends 'base.html.twig' %}

{% block title %}HelloController!{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #f3e6f5;{# light purple #}
            font-family: 'Poppins', sans-serif;
            text-align: center;
        }
        .example-wrapper {
            margin: 2em auto;
            max-width: 700px;
            background-color: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 0 15px rgba(111, 66, 193, 0.3);
        }
        .btn-container {
            display: flex;
            justify-content: center;
            gap: 1rem;
            flex-wrap: wrap;
            margin-top: 1.5rem;
        }

        .btn-danger {
            background-color: #6f42c1;
            border-color: #6f42c1;
        }

        .btn-danger:hover {
            background-color: #5a35a2;
            border-color: #5a35a2;
        }

        .modal-content {
            border: 2px solid #6f42c1;
            border-radius: 12px;
        }

        .modal-header {
            background-color: #f3e6f5;
        }

        .image {
            width: 100%;
            height: 250px;
            border-radius: 15px;
            object-fit: cover;
            margin-bottom: 1.5rem;
            box-shadow: 0 4px 15px rgba(123, 47, 247, 0.6);
            border: 3px solid #a57eff;
        }

    </style>

    <div class="example-wrapper">
        <h1>Details about {{ ticket.type }}!</h1>

        <h3>Price: <strong>{{ ticket.price}} lei </strong></h3>


        <ul>
            {{ ticket.description }}
        </ul>

        <img
            src="https://img.freepik.com/free-psd/music-festival-celebration-template_23-2151507793.jpg?semt=ais_hybrid&w=740"
            alt="Festival Image"
            class="image">




        {#            button trigger modal#}
        <div class="btn-container">
            <button type="button"
                    class="btn btn-danger"
                    data-bs-toggle="modal"
                    data-bs-target="#deleteModal{{ ticket.id }}">
                Delete
            </button>

            <a href="{{ path('all_tickets') }}" class="btn btn-outline-secondary">Back to list</a>
        </div>

        {#            modal#}
        <div class="modal fade"
             id="deleteModal{{ ticket.id }}"
             tabindex="-1"
             aria-labelledby="deleteModalLabel{{ ticket.id }}"
             aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">

                    <form action="{{ path('delete_ticket', {'id': ticket.id}) }}" method="post">

                        <div class="modal-header">
                            <h5 class="modal-title"
                                id="deleteModalLabel{{ ticket.id }}">Are you sure you want to delete the this ticket?</h5>

                            <button type="button"
                                    class="btn-close"
                                    data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>




    </div>
{% endblock %}
