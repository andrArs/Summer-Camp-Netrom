{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <style>
        body {
            background-color: #2e1a47;
            font-family: 'Poppins', sans-serif;
            text-align: center;
        }

        .wrapper {
            max-width: 550px;
            border-radius: 10px;
            margin: 50px auto;
            padding: 30px;
            background-color: #fff;
            box-shadow: 0 0 20px rgba(123, 46, 232, 0.1);
        }

        .h2 {
            font-family: 'Poppins', sans-serif;
            font-size: 2.2rem;
            font-weight: bold;
            color: #5d4587;
            text-shadow: 1px 1px 4px #2e1a47;
            margin-bottom: 10px;
        }

        .form-group {
            margin-bottom: 1.5rem;
            text-align: left;
        }

        label {
            font-weight: 500;
            color: #7b2ee8;
            display: block;
            margin-bottom: 5px;
        }

        input[type="text"],
        textarea {
            border: none;
            border-bottom: 2px solid #7b2ee8;
            background-color: transparent;
            border-radius: 0;
            padding: 8px 6px;
            width: 100%;
            font-size: 1rem;
            transition: border-color 0.3s ease;
        }

        input:focus,
        textarea:focus {
            outline: none;
            border-color: #7b2ee8;
            box-shadow: 0 1px 5px rgba(123, 46, 232, 0.2);
        }

        .btn-back {
            display: inline-block;
            margin: 20px auto 0;
            color: #6f42c1;
            border: 1px solid #6f42c1;
            padding: 6px 16px;
            border-radius: 20px;
            text-decoration: #6b21a8;
            transition: background-color 0.3s;


        }

        .btn-back2 {
            display: inline-block;
            margin: 20px auto 0;
            color: #6f42c1;
            border: 1px solid #6f42c1;
            padding: 6px 18px;
            border-radius: 20px;
            text-decoration: #43166a;
            transition: background-color 0.3s;


        }

        .btn-back:hover {
            background-color: #f3e6f5;
        }
        .btn-back2:hover {
            background-color: #f3e6f5;
        }

    </style>

<div class="wrapper bg-white">
<form method="post" action="{{ path('app_login')}}" data-turbo="false">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="h2 text-center"><a href="{{ path('app_homepage') }}" style="color:#5d4587;">Show Time</a></div>
{#    <div style="text-align: center; margin-top: 20px; color: #43166a;"> Log In </div>#}
    <label for="inputEmail" class="form-group">Email</label>
    <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword" class="form-group">Password</label>
    <input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required>
    <input type="hidden" name="_csrf_token"  value="{{ csrf_token('authenticate') }}">

{#    <div class="checkbox mb-3 text-start" >#}
{#        <label>#}
{#            <input type="checkbox" name="_remember_me"> Remember me#}
{#        </label>#}
{#    </div>#}

    <button class="btn-back2" type="submit" style="align-content: center">
        Log in
    </button>

    <div style="text-align: center; margin-top: 20px; color: #43166a;">
        Don't have an account?
        <div> <a href="{{ path('app_register') }}"   style="color: #6D28D9">Sign up</a></div>

{#    <a href="{{ path('app_register') }}" class="btn-back" >#}
{#        Sign Up#}
{#    </a>#}
    </div>
</form>
</div>

{% endblock %}
