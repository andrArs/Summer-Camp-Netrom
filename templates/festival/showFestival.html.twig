{% extends 'base.html.twig' %}

{% block title %}Festival Details{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #2e1a47;
            font-family: 'Poppins', sans-serif;
            text-align: center;
        }
        .example-wrapper {
            margin: 2em auto;
            max-width: 700px;
            background-color: rgb(236, 225, 253);
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 0 15px rgba(111, 66, 193, 0.3);
        }
        .btn-container {
            display: flex;
            justify-content: center;
            gap: 1rem;
            flex-wrap: wrap;
            margin-top: 1.5rem;
        }

        .btn-danger {
            border-radius: 20px;
            /*padding:  1.5rem;*/
            background-color: #6f42c1;
            border-color: #6f42c1;
        }

        .btn-danger:hover {
            background-color: #9a4ef1;
            border-color: #9a4ef1;
        }

        .modal-content {
            border: 2px solid #6f42c1;
            border-radius: 12px;
        }

        .modal-header {
            background-color: #f3e6f5;
        }

        .btn-back {
            display: inline-block;
            margin: 20px auto 0;
            color: #6f42c1;
            border: 1px solid #6f42c1;
            padding: 4px 16px;
            border-radius: 20px;
            text-decoration: none;
            transition: background-color 0.3s;

        }

        .btn-back:hover {
            background-color: #f3e6f5;
        }

        .festival-image {
            width: 70%;
            max-width: 400px;
            height: auto;
            border-radius: 15px;
            margin-bottom: 1.5rem;
            box-shadow: 0 4px 15px rgb(67, 22, 106);
            border: 3px solid #43166a;
            display: block;
            margin-left: auto;
            margin-right: auto;

        }
        .alert {
            padding: 10px 15px;
            margin-bottom: 20px;
            border-radius: 5px;
            font-weight: 600;
        }
        .alert-error {
            background-color: #f8d7da;
            color: #842029;
            border: 1px solid #f5c2c7;
        }
        .alert-success {
            background-color: #d1e7dd;
            color: #0f5132;
            border: 1px solid #badbcc;
        }
    </style>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">


    <div class="example-wrapper">
        <div class="text-start mb-3">
            <a href="{{ path('all_festivals') }}" class="btn-back" style="color: #2e1a47;">Back to list</a>
        </div>
        <h1 style="color: #2e1a47; align-content: center; " >Welcome to {{ festival.name }}!</h1>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <img
{#            it s the same image for all festivals for now, i need to make some changes in database for adding an imgUrl field:(#}
            src="https://craiovaintencity.ro/wp-content/uploads/2025/02/image00002-890x664.jpeg"
            alt="Festival Image"
            class="festival-image">

        <div class="text-center my-4">
            <h5 class="text mb-3" style="color: #43166a;">
                <i class="bi bi-geo-alt-fill me-2 "></i>
                <strong>Location:</strong> {{ festival.location }}
            </h5>

            <h5 class="text" style="color: #43166a;">
                <i class="bi bi-calendar-check-fill me-2 "></i>
                <strong>Date:</strong>
                {{ festival.startDate|date('d.m.y') }} - {{ festival.endDate|date('d.m.y') }}
            </h5>
        </div>



        <a href="{{ path('show_festival_lineup', {'id': festival.id}) }}"
           class="btn-back"
           style="border-radius: 25px"
        >
            See lineup
        </a>

        {% if is_granted('ROLE_ADMIN') %}
<div>
            <a href="{{ path('edit_festival', {'id': festival.id}) }}"
               class="btn-back"
               style="border-radius: 25px"
            >
                Edit Festival
            </a>
            </div>
        {% endif %}


        {% if is_granted('ROLE_ADMIN') %}
        <div class="btn-container">
            <button type="button"
                    class="btn btn-danger"
                    data-bs-toggle="modal"
                    data-bs-target="#deleteModal{{ festival.id }}">
                Delete
            </button>


        </div>

        {% endif %}

{#       modal#}
        <div class="modal fade"
             id="deleteModal{{ festival.id }}"
             tabindex="-1"
             aria-labelledby="deleteModalLabel{{ festival.id }}"
             aria-hidden="true">

            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">

                    <form
                        action="{{ path('delete_festival', {'id': festival.id}) }}"
                        method="post">

                        <div class="modal-header">
                            <h5 class="modal-title"
                                id="deleteModalLabel{{ festival.id }}">Are you sure you want to delete the following festival?</h5>

                            <button type="button"
                                    class="btn-close"
                                    data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                        </div>

                        <div class="modal-body">
                            <strong>{{ festival.name }}</strong>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary"  style="border-radius: 20px;" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
