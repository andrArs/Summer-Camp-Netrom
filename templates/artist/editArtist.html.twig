{% extends 'base.html.twig' %}

{% block title %}Hello ArtistController!{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #2e1a47;
            font-family: 'Poppins', sans-serif;
            text-align: center;
        }

        .wrapper {
            max-width: 550px;
            border-radius: 10px;
            margin: 50px auto;
            padding: 30px;
            background-color: #fff;
            box-shadow: 0 0 20px rgba(123, 46, 232, 0.1);
        }

        .h2 {
            font-family: 'Poppins', sans-serif;
            font-size: 2.2rem;
            font-weight: bold;
            color: #5d4587;
            text-shadow: 0 0 2px #2e1a47;
            margin-bottom: 10px;
        }

        .form-group {
            margin-bottom: 1.5rem;
            text-align: left;
        }

        label {
            font-weight: 500;
            color: #7b2ee8;
            display: block;
            margin-bottom: 5px;
        }

        input[type="text"],
        textarea {
            border: none;
            border-bottom: 2px solid #7b2ee8;
            background-color: transparent;
            border-radius: 0;
            padding: 8px 6px;
            width: 100%;
            font-size: 1rem;
            transition: border-color 0.3s ease;
        }

        input:focus,
        textarea:focus {
            outline: none;
            border-color: #7b2ee8;
            box-shadow: 0 1px 5px rgba(123, 46, 232, 0.2);
        }

        .btn-back {
            display: inline-block;
            margin: 20px auto 0;
            color: #6f42c1;
            border: 1px solid #6f42c1;
            padding: 4px 16px;
            border-radius: 20px;
            text-decoration: none;
            transition: background-color 0.3s;

        }

        .btn-back:hover {
            background-color: #f3e6f5;
        }
    </style>

    <div class="wrapper bg-white">
        <div style="text-align: left;">
            <a href="{{ path('all_artists') }}" class="btn-back">‚Üê Back to list</a>
        </div>

        <div class="h2 text-center" style="padding-top: 12px">Edit artist: {{ artist.name }}</div>

        {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="form-group">
            {{ form_label(form.genre) }}
            {{ form_widget(form.genre) }}
            {{ form_errors(form.genre) }}
        </div>
        <div class="form-group">
            {{ form_label(form.image) }}
            {{ form_widget(form.image) }}
            {{ form_errors(form.image) }}
        </div>

        <div class="form-group text-center mt-3">
            {{ form_row(form.save, {'attr': {'style': 'border-radius: 20px; border: 2px solid #5d4587;padding: 8px 10px;' }}) }}
        </div>

        {{ form_end(form) }}
    </div>



{% endblock %}
